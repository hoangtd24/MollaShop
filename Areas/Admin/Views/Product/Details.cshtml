@model Molla.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutAdmin";
}

<div class="content-header">
    <div class="container-fluid">
    <div class="mb-2">
        <div class="col-sm-6">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller= "Product" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
        </div><!-- /.col -->
    </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<div class="container-fluid px-3">
    <div style="background-color: white; border-radius: 4px; overflow: hidden;">
        <div class="product-header">
            @if(Model.Photos.Count > 0){
                <img src="/uploads/@Model.Photos[0].FileName" alt="@Model.ProductName" height="80" width="80"/>
            }
            else{
                <img src="/uploads/default.jfif" alt="@Model.ProductName" height="80" width="80"/>
            }
            <div class="product-info">
                <h2>
                @Html.DisplayFor(model => model.ProductName)
                </h2>
                <p>
                Code: #@Html.DisplayFor(model => model.ProductId)
                </p>
            </div>
            <a class="edit-btn" asp-action="Edit" asp-route-id="@Model?.ProductId">
                <i class="fas fa-edit">
                </i>
                Edit
            </a>
        </div>
        <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="custom-content-below-home-tab" data-toggle="pill" href="#custom-content-below-home" role="tab" aria-controls="custom-content-below-home" aria-selected="true">Overview</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="custom-content-below-profile-tab" data-toggle="pill" href="#custom-content-below-profile" role="tab" aria-controls="custom-content-below-profile" aria-selected="false">Product Images</a>
            </li>
        </ul>
    </div>
    <div class="tab-content mt-4" id="custom-content-below-tabContent">
        <div class="tab-pane fade show active" id="custom-content-below-home" role="tabpanel" aria-labelledby="custom-content-below-home-tab">
            <div class="mt-3">
                <div class="card">
                    <h5 class="card-header font-weight-bold">
                        Basic Info
                    </h5>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.ProductName):
                                <span>@Html.DisplayFor(model => model.ProductName)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.Price):
                                <span>$@Html.DisplayFor(model => model.Price)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.Alias):
                                <span class="fw-bold">@Html.DisplayFor(model => model.Alias)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.DateCreated):
                                <span>@Html.DisplayFor(model => model.DateCreated)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.DateModify):
                                <span>@Html.DisplayFor(model => model.DateModify)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.Active):
                                <span>@Html.DisplayFor(model => model.Active)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.BestSeller):
                                <span>@Html.DisplayFor(model => model.BestSeller)</span>
                            </li>
                        </ul>
                    </div>
                    
                </div>
            </div>
            <div class="card">
                <h5 class="card-header font-weight-bold">
                    @Html.DisplayNameFor(model => model.Description)
                </h5>
                <div class="card-body">
                    @Html.Raw(Model?.Description)
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="custom-content-below-profile" role="tabpanel" aria-labelledby="custom-content-below-profile-tab" style="background-color: white; padding: 16px;">
            <div class="row">
                @for(int i = 0; i < Model?.Photos.Count; i++){
                    <div class="col-md-3 p-3">
                        <img height="400" width="300" src="/uploads/@Model.Photos[i].FileName" alt="@Model.ProductName" style="width: 100%; height: auto;"/>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
