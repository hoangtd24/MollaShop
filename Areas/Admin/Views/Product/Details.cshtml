@model Molla.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutAdmin";
}

<div class="content-header">
    <div class="container-fluid">
    <div class="mb-2">
        <div class="col-sm-6">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller= "Product" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
        </div><!-- /.col -->
    </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<div class="container-fluid px-3">
    <div class="product-header">
        <img src="/uploads/@Model.Thumb" alt="@Model.ProductName" height="80" width="80"/>
        <div class="product-info">
            <h2>
            @Html.DisplayFor(model => model.ProductName)
            </h2>
            <p>
            Code: #@Html.DisplayFor(model => model.ProductId)
            </p>
        </div>
        <a class="edit-btn" asp-action="Edit" asp-route-id="@Model?.ProductId">
            <i class="fas fa-edit">
            </i>
            Edit
        </a>
    </div>
    <div class="mt-3">
        <div class="card">
            <h5 class="card-header fw-bold">
                Basic Info
            </h5>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Html.DisplayNameFor(model => model.ProductName):
                        <span>@Html.DisplayFor(model => model.ProductName)</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Html.DisplayNameFor(model => model.Price):
                        <span>$@Html.DisplayFor(model => model.Price)</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Html.DisplayNameFor(model => model.Alias):
                        <span class="fw-bold">@Html.DisplayFor(model => model.Alias)</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Html.DisplayNameFor(model => model.DateCreated):
                        <span>@Html.DisplayFor(model => model.DateCreated)</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Html.DisplayNameFor(model => model.DateModify):
                        <span>@Html.DisplayFor(model => model.DateModify)</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Html.DisplayNameFor(model => model.Active):
                        <span>@Html.DisplayFor(model => model.Active)</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Html.DisplayNameFor(model => model.BestSeller):
                        <span>@Html.DisplayFor(model => model.BestSeller)</span>
                    </li>
                </ul>
            </div>
            
        </div>
    </div>
    <div>
        <div class="card">
            <h5 class="card-header">
                @Html.DisplayNameFor(model => model.Description)
            </h5>
            <div class="card-body">
                @Html.DisplayFor(model => model.Description)
            </div>
            
        </div>
    </div>
</div>
