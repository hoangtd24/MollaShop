    <script>
        $(window).on("scroll", function () {
            var scroll = $(window).scrollTop();
            // add the 'active' class to the correct id based on the scroll amount
            var ele = $(".header").children().last();
            if (scroll >= 200) {
                ele.addClass("fixed-top shadow");
            }
            else{
                ele.removeClass("fixed-top shadow")
            }
        });
    </script>
